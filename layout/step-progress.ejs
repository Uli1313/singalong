<div class="mb-12 en-font">
  <div class="progress bg-primary-medium" style="height: 1px">
    <div
      class="progress-bar"
      role="progressbar"
      style="width: 0%"
      aria-valuenow="50"
      aria-valuemin="0"
      aria-valuemax="100"
    ></div>
  </div>
  <ol class="progress-list d-flex justify-content-between position-relative">
    <li class="text-center w-33">
      <div
        class="progress-circle rounded-circle mx-auto mb-2 <%= page === 'create1' ? 'active' : '' %>"
      >
        1
      </div>
      <p class="text-nowrap">填寫開團資料</p>
    </li>
    <li class="text-center w-33">
      <div
        class="progress-circle rounded-circle mx-auto mb-2 <%= page === 'create2' ? 'active' : '' %>"
      >
        2
      </div>
      <p>新增圖片</p>
    </li>
    <li class="text-center w-33">
      <div
        class="progress-circle rounded-circle mx-auto mb-2 <%= page === 'create3' ? 'active' : '' %>"
      >
        3
      </div>
      <p>開團成功</p>
    </li>
  </ol>
</div>
